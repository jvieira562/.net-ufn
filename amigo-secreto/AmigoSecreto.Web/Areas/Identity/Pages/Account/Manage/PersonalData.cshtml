@page
@model PersonalDataModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dados pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@section Styles {
    <link rel="stylesheet" href="/css/base.css" asp-append-version="true">
    <link rel="stylesheet" href="/css/manageNav.css" asp-append-version="true">
}
<style>
    
    .resume {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .btn-primary {
        width: 140px;
    }
    .btn-delete {
        width: 140px;
        border-radius: 5px;
        text-align: center;
        background-color: var(--white);
        padding: 0.3rem 0 0.3rem 0;
    }
    .btn-delete:hover {
        background-color: red;
        color: var(--white);
        cursor: pointer;
    }
    .btn-delete a {
        color: var(--black-100);
        font-size: 14px;
    }
    .btns {
        display: flex;
        gap: 1rem;
    }
</style>
<partial name="_ManageNav"/>
    <div class="resume">
        <h3>@ViewData["Title"]</h3>
        <p>Sua conta contém dados pessoais que você nos forneceu. Esta página permite que você baixe ou exclua esses dados.</p>
        <p>
            <strong style="color: var(--action-color); font-size: 14px;">A exclusão desses dados removerá permanentemente sua conta e não poderá ser recuperada.</strong>
        </p>
        <div class="btns">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="btn btn-primary" type="submit">Download</button>
            </form>
            <p class="btn-delete">
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
            </p>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
